<style>
    /* Estilos para la imagen */
    .containerImage {
        position: relative;
        width: 100%;
        height: 86vh; /* Establece el alto al 30% de la altura de la ventana */
        overflow: hidden;
    }

    .imagenHome {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Recorta la imagen para que ocupe todo el ancho sin distorsionarse */
    }

    /* Estilos para el formulario de inicio de sesión */
    .form-login {
        position: absolute;
        top: 50%;
        right: 10%; /* Ajusta la posición a la derecha */
        transform: translateY(-50%);
        background-color: #ffffff; /* Color de fondo blanco */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra */
        z-index: 1; /* Asegura que el formulario esté por encima de la imagen */
    }

        .form-login h2 {
            margin-top: 0;
            
        }

    .form-group {
        margin: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc; /* Borde gris */
        }

            .form-group input[type="submit"] {
                background-color: #0081ec; /* Color de fondo azul */
                color: #ffffff; /* Color del texto */
                border: none;
                cursor: pointer;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #005bab; /* Cambia el color de fondo al pasar el mouse */
                }

    .register-link {
        text-align: center;
        margin-top: 10px;
    }

        .register-link a {
            color: #0081ec; /* Color del enlace */
            text-decoration: none;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
            h2{
        color: #0081ec;
        text-align:center;
        font-weight:bold;
            }
            span{color:black;}
</style>

<div class="containerImage">
    <img class="imagenHome" src="~/Images/fondoLogin.jpg" />
    <div class="form-login">
        <h2>Login</h2>
        <form action="#" method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Ingrese su email" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="contraseña" placeholder="Ingrese su contraseña" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Iniciar sesión">
            </div>
        </form>
        <div class="register-link">
            <span>¿No tienes una cuenta?</span><a class="" asp-area="" asp-controller="Account" asp-action="Register">Regístrate aquí</a>
        </div>
    </div>
</div>


@if (ViewData["MENSAJE"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @ViewData["MENSAJE"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}